<ul>
{% for post in postslist | reverse %}
  <li>
    <a href="{{ post.url | url }}">{% if post.data.pageTitle %}{{ post.data.pageTitle }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="postlist-date" datetime="{{ post.date | dateObjectToYmdHyphen }}">{{ post.date | dateObjectToShortDate }}</time>
    <ul class="tags">{% for tag in post.data.tags | filterTagList %} 
      {% set tagUrl %}/blog/tags/{{ tag | slugify }}/{% endset %}
      <li><a href="{{ tagUrl | url }}">{{ tag }}</a></li>
    {% endfor %}</ul>
  </li>
{% endfor %}
</ul>